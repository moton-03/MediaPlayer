@page "/"

<PageTitle>Queue</PageTitle>

<style>
    menu > * > * > *,
    .menu > * > * > * {
        display: none;
    }

    menu > *:hover > * > *,
    .menu > *:hover > * > * {
        display: unset;
    }

    menu, .menu {
        display: flex;
        list-style: none;
    }

    .menu_button {
        background-image: linear-gradient(180deg, rgb(5, 39, 103) 0%, #3a0647 70%);
        color: white;
        border: none;
    }

</style>

<h1>🗄️Queue</h1>

<menu class="menu_top">
    <li>
        <button class="menu_button">🗄️Queue</button>
        <menu>
            <li>
                <button class="menu_button">➕Add Media</button>
                <menu>
                    <li>
                        <button class="menu_button" @onclick="AddMenu_Web">
                            🌐From Web
                            <br />
                            <p>
                                URL:<input type="text" @bind="@AddMenu_Web_URL" />
                            </p>
                        </button>
                    </li>
                </menu>
            </li>
            <li>
                <button class="menu_button" @onclick="ClearMenu">❌Clear</button>
            </li>
        </menu>
    </li>
    <li>
        <button class="menu_button">📽️Play</button>
    </li>
</menu>

<div>
    <div>
        <ul>
            <li>
                @Queue
            </li>
        </ul>
    </div>
    <div>
        <iframe src="@Queue">

        </iframe>
    </div>
</div>


@code {
    string AddMenu_Web_URL;
    string Queue;

    void AddMenu_Web()
    {
        Queue = AddMenu_Web_URL;
    }
    void ClearMenu()
    {
        Queue = "";
    }
}